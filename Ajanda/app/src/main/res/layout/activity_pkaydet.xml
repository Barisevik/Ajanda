<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".pkaydetActivity">

    <EditText
        android:id="@+id/tariht"
        android:layout_width="414dp"
        android:layout_height="66dp"
        android:layout_marginBottom="256dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Plan son tarih:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/guncelle"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/baslikt"
        android:layout_width="233dp"
        android:layout_height="51dp"
        android:layout_marginTop="51dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Başlık girmelisin"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/guncelle"
        android:layout_width="151dp"
        android:layout_height="64dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="28dp"
        android:background="@color/teal_700"
        android:onClick="save"
        android:shadowColor="@color/teal_700"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/icerikk"
        android:layout_width="414dp"
        android:layout_height="69dp"
        android:layout_marginTop="128dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Planım "
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslikt" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="419dp"
        android:layout_height="76dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="96dp"
        android:background="@color/white"
        android:hint="Hergün hatırlatma alarmı çalsın mı"
        android:shadowColor="@color/teal_700"
        android:thumbTint="@color/teal_700"
        android:trackTint="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/guncelle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>